pipeline {
    agent any

    parameters {
        choice(
            name: 'MONTH', 
            choices: ['July', 'August', 'September'], 
            description: 'Choose the month to make your wishes come true'
        )
    }

    stages {
        stage('Setup') {
            steps {
                echo "Pipeline started for the month: ${params.MONTH}"
            }
        }

        stage('July Objectives Overview') {
            when {
                expression { params.MONTH == 'July' }
            }
            steps {
                echo 'Here are your objectives for the month of July'
            }
        }

        stage('Create and Save a List of Upcoming Concerts') {
            when {
                expression { params.MONTH == 'July' }
            }
            steps {
                echo 'Creating a list of upcoming concerts'
                sleep 3
                echo 'Concert list created'
            }
        }

        stage('Organize Saved Concerts') {
            when {
                expression { params.MONTH == 'July' }
            }
            steps {
                echo 'Organizing saved concerts'
                sleep 3
                echo 'Concerts organized'
            }
        }
        
        stage('Share Concerts with Friends') {
            when {
                expression { params.MONTH == 'July' }
            }
            steps {
                echo 'Sharing saved concerts with friends'
                sleep 3
                echo 'Concerts shared'
            }
        }
    }
}
